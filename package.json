{
  "name": "johncompany",
  "version": "1.0.0",
  "description": "John Company for BGA",
  "main": "johncompany.js",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass --no-source-map src/johncompany.scss johncompany.css",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/johncompany.scss johncompany.css",
    "watch": "npm run watch:ts && npm run watch:scss",
    "build": "npm run build:ts && npm run build:scss"
  },
  "author": "Frans Bongers",
  "license": "MIT",
  "dependencies": {
    "bga-animations": "thoun/bga-animations#1.1.1"
  },
  "devDependencies": {
    "sass": "^1.77.2",
    "typescript": "^5.7.3"
  }
}
